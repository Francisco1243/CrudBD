@model ConexionBD2.Models.datosPersonales

@{
    ViewBag.Title = "Details";
}
<br />
<br />
<div class="container">
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <div class="panel panel-primary">
                <div class="panel-heading">Detalles del alumno</div>
                <div class="panel-body">
                    <div>
                        <center><font color="blue"><h5>Datos personales</h5></font></center>
                        <hr />
                        @*<dl class="dl-horizontal">*@
                        <table class="table table-bordered">
                            <tr>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.Nombre)
                                </th>

                                <td scope="row">
                                    @Html.DisplayFor(model => model.Nombre)
                                </td>
                                </tr>
                            <tr>

                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.Apellido)
                                </th>

                                <td scope="row">
                                    @Html.DisplayFor(model => model.Apellido)
                                </td>
                                </tr>
                            <tr>

                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.Direccion)
                                </th>

                                <td scope="row">
                                    @Html.DisplayFor(model => model.Direccion)
                                </td>
                                </tr>
                            <tr>

                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>

                                <td scope="row">
                                    @Html.DisplayFor(model => model.Email)
                                </td>
                                </tr>
                            <tr>

                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.Telefono)
                                </th>

                                <td scope="row">
                                    @Html.DisplayFor(model => model.Telefono)
                                </td>
                            </tr>
                        </table>

                        @*</dl>*@
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            @Html.ActionLink("Editar", "Edit", new { id = Model.Id}, new { @class = "btn btn-primary" })
                            @Html.ActionLink("Ver lista de alumnos", "Index", "datos", null, new { @class = "btn btn-success" })
                        </div>
                       </div>
                  </div>
            </div>
        </div>
    </div>
</div>

